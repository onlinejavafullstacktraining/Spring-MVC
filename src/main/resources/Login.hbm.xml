<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
 "http://hibernate.org/dtd/hibernate-mapping-2.0.dtd">  
  
 <hibernate-mapping package="com.spring.mvc">  
  <class name="Login" table="LOGIN">    
    <id name="id" column="LOGIN_ID" type="long">
			<generator  class="foreign">
				<param name="property">register</param>
			</generator>
		</id>
            
    <property name="userName" column="USERNAME"></property> 
    <property name="password" column="PASSWORD"></property> 
     <one-to-one name="register" class="Register" constrained="true"></one-to-one>
    </class>
    
    </hibernate-mapping>